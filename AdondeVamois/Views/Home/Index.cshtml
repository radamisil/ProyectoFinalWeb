@using AdondeVamos.Models
@{
    Html.RenderPartial("_EstiloIndex");
}
<nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
    <div class="container">
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="#page-top">A Donde Vamos ?</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" href="/">Inicio</a>
                </li>

                <li>
                    @if (@ClsSesion.GetUsuarioLogueado() != null)
                    {
                        <a class="page-scroll" href="/Mapa/Mapa/">Mi perfil(@ClsSesion.GetEmailLogueado())</a>
                    }
                    else
                    {
                        @Html.ActionLink("Ya tengo cuenta", "Login", "Home", new { area = "" }, new { @class = "page-scroll" })
                    }

                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <a href="/Home/Registracion/" class="page-scroll btn btn-xl">Comenza ahora!</a>
        </div>
    </div>
</header>

<!-- Seccion producto -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner carousel-images">
        <div class="item active">
            <h2 class="titulo-slider">La APP que estabas necesitando !!!</h2>
            @Html.ActionLink("Quiero registrarme!", "Registracion", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
            <img src="../images/slider1.jpg" alt="slider">
        </div>
        <div class="item">
            <h2 class="titulo-slider">Podes voler a usar pedidos anteriores!</h2>
            @Html.ActionLink("Iniciar sesión", "Login", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
            <img src="../images/slider2.jpg" alt="slider">
        </div>
        <div class="item">
            <h2 class="titulo-slider">Podes compartir tus pedidos a tus amigos!</h2>
            @Html.ActionLink("Mas información", "Login", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
            <img src="../images/slider3.jpg" alt="slider">
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Seccion Images -->
<section id="pedidos">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Como funciona?</h2>
                <h3 class="section-subheading text-muted">En simples pasos</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="../images/slider1.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">

                                <h4 class="subheading">Inicias la APP</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Colocas los datos necesarios para comenzar</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="../images/slider2.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">

                                <h4 class="subheading">Elegis el lugar</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Podrás ver si el lugar está lleno</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="../images/slider3.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="subheading">Podrás chatear con gente que allí se encuentre</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Podrás disfrutar, sin perder tiempos !!</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="../images/fondo.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4 class="subheading">No pierdas Tiempo!!</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Fácil, rápido, es lo que estabas buscando !!</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h3>
                                A
                                <br>disfrutar!

                            </h3>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>